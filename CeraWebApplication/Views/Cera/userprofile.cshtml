@{
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
    //ViewData["Title"] = "Login";
}

@model CERA.AuthenticationService.UserModel
<!---- Main Body ---->

    <section class="cera_section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mt-5 mb-5">
                        <div class="row">
                            <div class="col-md-4 mx-auto">
                                <div class="profile-card">
                                    <div class="profile-upload">
                                        <img src="/img/profile.jpg" class="profile-pic">
                                    </div>

                                    <div class="profile_pCont">
                                        <h4>@User.Identity.Name </h4>
                                        
                                    </div>

                                    <div class="profile_table">

                                        <table class="table profile-table">
                                            <tr>
                                                <td>Full Name</td>
                                                <td>@Model.userName </td>
                                            </tr>
                                            <tr>
                                                <td>Email Id</td>
                                                <td>@Model.emailId</td>
                                            </tr>
                                            <tr>
                                                <td>Role</td>
                                                <td>@Model.roles[0]</td>
                                            </tr>
                                        </table>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


