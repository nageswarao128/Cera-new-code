<div>
    <div class="row">
        <div class="col-md-4">
            <ul class="cera-breadCrumb">
                <li><a asp-controller="Cera" asp-action="DashBoard">Home </a></li>
                <li><a href="#">Resources</a></li>
                <li>Resource Groups</li>
            </ul>
        </div>
    </div>
    <div class="cera-rightContent">
        <h3 class="main_h">Resource Groups </h3>
        <table class="table display" id="example" style="width:100%">
            <thead>
                <tr>

                    <th>
                        Name
                    </th>

                    <th>
                        Region
                    </th>
                    <th>
                        Cost (INR)
                    </th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.ActionLink(item.Name,"GetResourceGroupResources","Cera", new {name = item.Name})
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegionName)
                        </td>
                        @if (item.cost == null)
                        {
                            <td>₹ 0.00</td>
                        }
                        else
                        {
                            <td>
                               ₹ @Html.DisplayFor(modelItem => item.cost)
                            </td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

