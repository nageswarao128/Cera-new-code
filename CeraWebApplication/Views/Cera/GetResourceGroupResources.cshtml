@model List<CeraWebApplication.Models.ResourcesModel>

@{
    Layout = "~/Views/Shared/_ResourcesLayout.cshtml";
    //ViewData["Title"] = "Login";
}


<div>
    <div class="row">
        <div class="col-md-4">
            <ul class="cera-breadCrumb">
                <li><a asp-controller="Cera" asp-action="DashBoard">Home </a></li>
                <li><a href="#">Resources</a></li>
                <li>Resources</li>
            </ul>
        </div>
        <div class="col-md-8 text-right">
            <div>
                <a asp-controller="Cera" asp-action="GetResourceGroupDetails" class="back_toList">Back to List</a>
            </div>
        </div>
    </div>
    <div class="cera-rightContent">
        <h3 class="main_h">Resources </h3>
        <table class="table display" id="example" style="width:100%">
            <thead>
                <tr>

                    <th>
                        Name
                    </th>

                    <th>
                        ResourceGroup
                    </th>
                    <th>
                        ResourceType
                    </th>
                    <th>
                        Region
                    </th>
                    <th>
                        Cost
                    </th>
                </tr>
            </thead>
            <tbody id="ddlVM">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResourceGroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegionName)
                        </td>
                        @if (item.cost == null)
                        {
                            <td>0.00</td>
                        }
                        else
                        {
                    <td>
                        @Html.DisplayFor(modelItem => item.currency) @Html.DisplayFor(modelItem => item.cost)
                    </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
