    function appendhtmldata(data) {
        console.log('appendhtmlhit');
        if (data != null) {

            let html = '';
            debugger;

            for (let i = 0; i < data.length; i++) {
                html += '<tr>';
                html += '<td>' + data[i].name + '</td>';
                html += '<td>' + data[i].resourceGroupName + '</td>';
                html += '<td>' + data[i].type + '</td>';
                html += '<td>' + data[i].regionName + '</td>';
                if (data[i].cost == null) {
                    html += '<td>' +'0.00' + '</td>';
                }
                else {
                    html += '<td>' + data[i].currency + data[i].cost + '</td>';
                }
                html += '</tr>';
            }
            $('#ddlVM').empty();
            $('#ddlVM').append(html);

        }
    }
